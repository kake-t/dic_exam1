<div class="blogs_body container">
  <div class="row">
<h1>この内容で作成しますか？</h1>

<div class="col-md-2 col-md-offset-5 col-xs-10 col-xs-offset-1">
    <%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content %>
    <%= hidden_field_tag :"cache[image]",@blog.image.cache_name %>
    <p><%= @blog.title %></p>
    <p><%= @blog.content %></p>

      <% if @blog.image? %>
        <%= image_tag(@blog.image.url) %>
      <% end %>
      
    <%= form.submit "はい", class:"btn btn-default" %>
    <% end %>
</div>
<div class="col-md-2 col-md-offset-5 col-xs-10 col-xs-offset-1">
    <%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content %>
    <%= hidden_field_tag :"cache[image]",@blog.image.cache_name %>
    <%= form.submit "いいえ", name: 'back', class:"btn btn-default" %>
    <% end %>
</div>
</div>
</div>
