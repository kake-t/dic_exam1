<div class="blogs_body container">
  <div class="row">
    <!-- お気に入りボタン -->
    <h1>ブログ詳細</h1>
    <% unless @blog.user == current_user %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
    <!-- ここまでお気に入りボタン -->
    <div class="text-center">
      ------------タイトル------------
    </div>
    <div class="text-center">
      <%= @blog.title %>
    </div>
    <div class="text-center">
      ------------内容------------
    </div>
    <div class="text-center">
      <%= @blog.content %>
    </div>
    <div class="text-center">
      <%= image_tag @blog.image %>
    </div>
    <p>投稿者：<%= @blog.name %></p>
    <div class="col-md-2 col-md-offset-5 col-xs-10 col-xs-offset-1">
      <%= link_to '編集' , edit_blog_path(@blog.id), class:"btn btn-primary"%>
    </div>
    <div class="col-md-2 col-md-offset-5 col-xs-10 col-xs-offset-1">
      <%= link_to '削除' , blog_path(@blog.id), method: :delete , data: {confirm: '削除していいですか？'}, class:"btn btn-danger" %>
    </div>
    <div class="col-md-2 col-md-offset-5 col-xs-10 col-xs-offset-1">
      <%= link_to '一覧に戻る', blogs_path, class:"btn btn-default" %>
    </div>
  </div>
</div>
